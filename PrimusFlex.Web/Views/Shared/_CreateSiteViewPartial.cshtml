<div id="dialog-form" title="Create new site">
    @using (Html.BeginForm("CreateSiteAsync", "Site", FormMethod.Post, new { id = "create-site-form" }))
    {
        <div class="form-group">
            <label for="siteName">Name</label>
            <input type="text" class="form-control" id="site-name">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="site-address">
        </div>
        <div class="form-group">
            <label for="postCode">Post code</label>
            <input type="text" class="form-control" id="site-post-code">
        </div>
        <button type="submit" id="async-submit-button" class="btn btn-default">Create</button>
    }
</div>